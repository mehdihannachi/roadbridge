	<div class="maps-wraper">
		<div id="cd-zoom-in"></div>
		<div id="cd-zoom-out"></div>
		<div id="maps" class="maps" data-lat="25.2799315" data-lng="51.5106761" data-marker="images/cd-icon-location.png">
		</div>
	</div>



