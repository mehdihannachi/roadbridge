<body ng-controller="contactController">

	<!-- Load page -->
	<div class="animationload">
		 
		<div class="spinner">
			<img id="logo-spinner" src="images/logo-load.png"></img>
		</div>
	</div>

	<!-- BACK TO TOP SECTION -->
	<a href="#top" class="cd-top cd-is-visible cd-fade-out">Top</a>

	<div class="header">
		<!-- HEADER SECTION -->
        <%- include header.ejs %>

	</div>



	<!-- BANNER -->
	<div class="section banner-page about">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 col-md-12">
					<div class="title-page" style="background: rgba(0, 0, 0, 0.6);">Contact us</div>
					<!--<ol class="breadcrumb">
						<li><a href="/">Contact</a></li>
						<li class="active">Contact Us</li>
					</ol>-->
				</div>
			</div>
		</div>
	</div>

	<!-- Contact -->
	<div class="section contact overlap">
		<div class="container">
			<div class="row">
				<div class="col-sm-4 col-md-4 col-md-push-8">
					<div class="widget download">
						<a href="images/brochure/brochure.pdf" target="_blank" class="btn btn-secondary btn-block btn-sidebar"><span class="fa  fa-file-pdf-o"></span> Company Brochure</a>
					</div>
					<div class="widget contact-info-sidebar">
						<div class="widget-title">
							Head Office
						</div>
						<ul class="list-info">
							<li>
								<div class="info-icon">
									<span class="fa fa-map-marker"></span>
								</div>
								<div class="info-text">PO Box 7098, Office 605, 6th Floor,
850 Qatari Bin Al Fujaah Street.
Bin Mahmoud, Doha, Qatar</div>
							</li>
							<li>
								<div class="info-icon">
									<span class="fa fa-phone"></span>
								</div>
								<div class="info-text"><a href="tel:+97444190333">+974 4419 0333</a></div>
							</li>
							<li>
								<div class="info-icon">
									<span class="fa fa-fax"></span>
								</div>
								<div class="info-text">
								<a href="tel:+97444418249">+974 4441 8249</a></div>
							</li>
							<li>
								<div class="info-icon">
									<span class="fa fa-envelope"></span>
								</div>
								<div class="info-text"><a href="mailto:info@roadbridgellc.com" target="_blank">info@roadbridgellc.com</a></div>
							</li>

						</ul>
					</div>

				</div>
				<div class="col-sm-8 col-md-8 col-md-pull-4">
					<div class="content">
						<p class="section-heading-4"  style="    text-align: justify;">The quickest way to get in touch is to telephone us or alternatively simply to fill in our message form, And we will do everything we can to get back to you promptly.</p>
						<div class="margin-bottom-30"></div>
						<h3 class="section-heading-2">
							Contact Details
						</h3>
						<form class="form-contact"  name="p" data-toggle="validator" novalidate="true" ng-class="{true:'submitted'}[submitted]">
							<div class="form-group">
								<input type="text" class="form-control"  ng-model="p.name" placeholder="Full Name..." ng-required="true" ng-required="true">
								<div class="help-block with-errors"></div>
							</div>
							<div class="form-group">
								<input type="email" class="form-control" ng-model="p.email"  placeholder="Enter Address..." ng-required="true">
								<div class="help-block with-errors"></div>
							</div>
							<div class="form-group">
								<input type="text" class="form-control"  ng-model="p.subject" placeholder="Subject..." ng-required="true">
								<div class="help-block with-errors"></div>
							</div>
							<div class="form-group">
								<textarea  class="form-control" ng-model="p.message" rows="6" placeholder="Write message"></textarea ng-required="true">
								<div class="help-block with-errors"></div>
							</div>


							<div class="form-group" ng-show="alertsuccess">
								<div class="col-xs-10 alert alert-success">Your request has been sent <strong> successfully.</strong></div>
							</div>
							<div class="form-group" ng-show="alertdanger">
								<div class="col-xs-10 alert alert-danger">Your request<strong> has failed</strong>Please retry later.
								</div>
							</div>


							<div class="form-group">
								<div id="success"></div>
								<button type="submit" class="btn btn-secondary disabled" style="pointer-events: all; cursor: pointer;" ng-click="sendMessage(p)">Submit message</button>
							</div>
						</form>
						<div class="margin-bottom-50"></div>

					</div>
				</div>

			</div>

		</div>
	</div>
		<div class="col-sm-8 col-md-8">
		<h3 class="section-heading-2">Our Location</h3>	
		</div>
